	<!-- 진행 중인 봉사 게시판 -->
	<!-- 오늘!! 진행중인 봉사 신청글 목록보기 -->
	<select id="selectVolunteeringList" parameterType="SearchVO" resultType="RecruitBoardVO">
			
		<![CDATA[
            SELECT
				 *
			FROM
				 recruit_board
			WHERE trunc(volun_start_date) = trunc(sysdate)
            AND group_mem_seq = 4
		]]>

	</select>
	
	<!-- 7일안에 !!시작하는 봉사 신청글 목록보기 -->
	<select id="selectVolunteeringListWithinAWeek" parameterType="SearchVO" resultType="RecruitBoardVO">
			
		<![CDATA[
			SELECT
				 *
			FROM
				 recruit_board
			WHERE trunc(volun_start_date) BETWEEN trunc(sysdate + 1) AND trunc(sysdate + 7)
            AND group_mem_seq = 4
		]]>
			
	</select>
	
	
	<!-- 진행중 봉사가 승인인 사람이 있어야 출력됨.................. -->
	<!-- 진행중인 봉사 게시판 상세보기 -> 회원목록 -->
	<select id="selectVolunteeringMember" resultType="VolunteeringVO">
			
			SELECT 
				v.recruit_seq,
			    v.mem_seq,
			    m.name,
			    v.state,
			    v.attendance
			FROM 
			    volunteer_proceed v
			JOIN 
			    member m ON v.mem_seq = m.mem_seq
			WHERE 
			    recruit_seq = #{recruitSeq}
			AND
                state = '승인'	
            ORDER BY
            	v.mem_seq asc

	</select>
	
	
	
	<!-- 진행 중인 봉사 조회 -->
	<select id="selectAttendance" resultType="VolunteerRecordVO">
		select
			 * 
		from 
			volunteer_record
		WHERE
			recruit_seq = #{recruitSeq}
			
	</select>
	
	<!-- 진행 중인 봉사 출석체크 -->
	<insert id="attendance" >
	    <selectKey keyProperty="volunSeq" resultType="int" order="BEFORE">
        	select VOLUNTEER_RECORD_SEQ.NEXTVAL volun_seq from dual
    	</selectKey>
			INSERT INTO
				VOLUNTEER_RECORD
			(
				VOLUN_SEQ
				,MEM_SEQ
				,RECRUIT_SEQ
				,GROUP_MEM_SEQ
				,TIMEIN
			) VALUES (
				#{volunSeq}
				,#{memSeq}
				,#{recruitSeq}
				,#{groupMemSeq}
				,#{timein}
			)
			
	</insert>
